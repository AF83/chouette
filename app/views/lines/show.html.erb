  <div class="summary">
    <p>
      <label>Nom :</label>
      <%= @line.name %>
    </p>
    <p>
      <label>Code :</label>
      <%= @line.number %>
    </p>
    <p>
      <label>Identifiant Chouette :</label>
      <%= @line.registrationnumber %>
