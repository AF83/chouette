<%= semantic_form_for @referential do |form| %>
  <%= form.inputs do %> 
    <%= form.input :name %> 
    <%= form.input :slug%>

    <% if @referential.new_record? %>
    <%= form.input :resources, :as => :file %>
    <% end %>
  <% end %>


  <%= form.buttons do %>
    <%= form.commit_button true %>
    <li><%= t('or') %></li>
    <li><%= link_to t('back'), :back %></li>
  <% end %>
<% end %>
