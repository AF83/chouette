<%= semantic_form_for @referential do |form| %>
  <%= form.inputs do %>
    <%= form.input :name %>
    <% if @referential.new_record? %>
      <%= form.input :slug%>
    <% else %>
      <li>
      <label><%= @referential.human_attribute_name("slug") %></label>
      <%= @referential.slug %>
      </li>
    <% end %>
    <%= form.input :prefix %>
    <%= form.input :projection_type, :as => :select, :collection => Referential.available_srids %>
    <%= form.input :time_zone %>
    <%= form.input :upper_corner %>
    <%= form.input :lower_corner %>
  <% end %>

  <%= form.actions do %>
    <%= form.action :submit, :as => :button %>
    <%= form.action :cancel, :as => :link %>
  <% end %>
<% end %>
