<!DOCTYPE html>
<html>
  <head>
    <title>CHOUETTE - <%= title %></title>
    <%= stylesheet_link_tag :application %>      
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tag %>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
  </head>
  <body>
    <div id="header">
      <div class="infos">
        <h1>Chouette</h1>
      </div>

      <div class="tabs">
        <ul class="main">
          <li><%= tab_link_to t('activerecord.models.line'), lines_path %></li>
        </ul>
      </div>
    </div>
    <div id="body">
      <div id="flash">
        <% flash_tag flash %>
      </div>
      <div id="workspace" class="<%= controller_name %> <%= action_name %>">
        <%= yield %>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>
  </body>
</html>
